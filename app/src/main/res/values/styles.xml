<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="textView_title">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="textView_submit">
        <item name="android:text">@string/submit</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/color_gray</item>
    </style>

    <style name="AlertDialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:textColor">@color/color_gray</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="MyCustomTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:textSelectHandle">@color/color_dark</item>
        <item name="android:textSelectHandleLeft">@color/color_dark</item>
        <item name="android:textSelectHandleRight">@color/color_dark</item>
    </style>

</resources>